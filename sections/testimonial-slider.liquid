<div class="testimonial-slider">


    {%  for block in section.blocks %} 
        <div class="testimonial-card">
           <div class="tesimonial-icon">
                {% render 'icon-quotes' %}
            </div>
            <p class="testimonial-text">
                {{block.settings.text}}
            </p>
            <div class="testimonial-image">
                <img src="{{block.settings.image | image_url: width: 350 }}">
            </div>
            <h3 class="testimonial-name">{{block.settings.name}}</h3>     
        </div>
    {% endfor %}

</div>

{%  schema  %} 

    {
        "name":"testimonial slider",
        "settings": [],
        "blocks": [
            {
                "type":"testimonial",
                "name":"testimonial",
                "settings": [
                    {
                        "id":"text",
                        "label":"Text",
                        "type": "richtext"
                    },
                    {
                        "id":"name",
                        "label": "Name",
                        "type": "text"
                    },
                    {
                        "id":"image",
                        "label":"Image",
                        "type": "image_picker"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "testimonial slider"
            }
        ]
    }

{% endschema %} 