{{'component-promotion.css' |  asset_url |  stylesheet_tag }}

<style>
  .promotionContainer-{{section.id}}{
    background-color: {{section.settings.bg_color}};
  }

  .promotionContainer-{{section.id}} h2,
  .promotionContainer-{{section.id}} p{
    margin: 0;
    color: {{section.settings.text_color}};
  }
</style>

<div class="promotionContainer page-width promotionContainer-{{section.id}}">
    <h2 class="h1">{{section.settings.heading}}</h2>
    <p>{{section.settings.text}}</p>
    <a class="button" href="{{section.settings.btn_link}}">{{section.settings.btn_label}}</a>
</div>


{% schema %}
{
    "name": "Promotion",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text"
        },
        {
            "type": "text",
            "id": "btn_label",
            "label": "Button Label",
            "default": "Shop Now"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "transparent"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#000000"
        }
        ],
    "presets": [
        {"name": "Promotion"}
    ]
}
{% endschema %}